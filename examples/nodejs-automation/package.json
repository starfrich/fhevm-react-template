{
  "name": "@fhevm-examples/nodejs-automation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "FHEVM SDK automation example with scheduled tasks and batch processing",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production tsx src/index.ts",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "task:decrypt": "tsx src/tasks/daily-decrypt.ts",
    "task:batch": "tsx src/tasks/batch-encrypt.ts"
  },
  "dependencies": {
    "@fhevm-sdk": "workspace:*",
    "ethers": "^6.13.7",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "~18.19.50",
    "@types/node-cron": "^3.0.11",
    "cross-env": "^7.0.3",
    "typescript": "~5.8.2",
    "tsx": "^4.19.2"
  }
}
